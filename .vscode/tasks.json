{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build OpenGL Game",
            "type": "shell",
            "command": "g++",
            "args": [
                "circle_game.cpp",
                "-o",
                "circle_game",
                "-lGL",
                "-lGLU",
                "-lglut",
                "-g" // Add debugging symbols
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },

        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}